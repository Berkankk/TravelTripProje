@using TravelTripProje.Models.Sınıflar
@model List<Blog>

<div class="padding1">
    <h4>En İyi Yerler</h4>
    <div class="box-left">
        @foreach(var item in Model)
        {


        <div class="bot-img">
            <a href="/Blog/BlogDetay/@item.ID"><img src="@item.BlogImage" style="width:120px ; height:65px;"     alt=""  /></a>
        </div>
        <div class="bot-desc1">
            <p>@item.Aciklama.Substring(0,100) ...</p>
        </div>
        <div class="clear"></div>
        }
       
    </div>
    @Html.Action("Partial4", "Default")
</div>